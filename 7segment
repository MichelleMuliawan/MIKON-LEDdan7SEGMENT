const int rat0 = 2
const int rat1 = 3
const int rat2 = 4
const int rat3 = 5
const int pul0 = 6
const int pul1 = 7 
const int pul2 = 8
const int pul3 = 9

void setup() {
  pinMode (rat0,OUTPUT);
  pinMode (rat1,OUTPUT);
  pinMode (rat2,OUTPUT);
  pinMode (rat3,OUTPUT);
  pinMode (pul0,OUTPUT);
  pinMode (pul1,OUTPUT);
  pinMode (pul2,OUTPUT);
  pinMode (pul3,OUTPUT);
}
void loop() {
  PORTD = ~PORTD;
  digitalWrite(rat0, HIGH);     
  digitalWrite(rat1, LOW);    
  digitalWrite(rat2, HIGH);   
  digitalWrite(rat3, LOW);     
  digitalWrite(pul0, HIGH);   
  digitalWrite(pul1, LOW);   
  digitalWrite(pul2, HIGH);   
  digitalWrite(pul3, LOW);    
}
